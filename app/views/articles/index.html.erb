<h1>Articles#index</h1>
<% @articles.each do |article| %> 
  <h1>  <%= article.title %> </h1>
  <p>Written by: <%= article.author.name %></p>
<% end %>
<%= @message unless @message.nil? %>


<h1>Create a new article</h1>
<%= form_with url: articles_path, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <%= form.submit %>
<% end %>

